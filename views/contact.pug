extends layout

block content
      #fh5co-main
        .fh5co-more-contact
          .fh5co-narrow-content
            .row
              .col-md-4
                .fh5co-feature.fh5co-feature-sm.animate-box(data-animate-effect='fadeInLeft')
                  .fh5co-icon
                    i.icon-mail
                  .fh5co-text
                    p
                      a(href='mailto:amaraladil@hotmail.com') amaraladil@hotmail.com
              .col-md-4
                .fh5co-feature.fh5co-feature-sm.animate-box(data-animate-effect='fadeInLeft')
                  .fh5co-icon
                    i.icon-map3
                  .fh5co-text
                    p Ajax, ON
              .col-md-4
                .fh5co-feature.fh5co-feature-sm.animate-box(data-animate-effect='fadeInLeft')
                  .fh5co-icon
                    i.icon-phone3
                  .fh5co-text
                    p
                      a(href='tel://416 876 8544') +416 876 8544
        .fh5co-narrow-content.animate-box(data-animate-effect='fadeInLeft')
          .row
            .col-md-4
              h2 Get In Touch
              h4=message ? message : ''
          form(action='/contact', method='post')
            .row
              .col-md-12
                .row
                  .col-md-6
                    .form-group
                      input.form-control(type='text', name="name", placeholder='Name')
                    .form-group
                      input.form-control(type='text', name="email", placeholder='Email')
                    .form-group
                      input.form-control(type='text', name="phone", placeholder='Phone')
                  .col-md-6
                    .form-group
                      textarea#message.form-control(name='message', cols='30', rows='7', placeholder='Message')
                    .form-group
                      input.btn.btn-primary.btn-md(type='submit', value='Send Message')
        //- #map
      // jQuery
      script(src='/js/jquery.min.js')
      // jQuery Easing
      script(src='/js/jquery.easing.1.3.js')
      // Bootstrap
      script(src='/js/bootstrap.min.js')
      // Waypoints
      script(src='/js/jquery.waypoints.min.js')
      // Flexslider
      script(src='/js/jquery.flexslider-min.js')
      // Google Map
      script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCEI_Vym8lZk6R3WMN6xyL8PftycTU7gVM&sensor=false')
      script(src='/js/google_map.js')
      // MAIN JS
      script(src='/js/main.js')
